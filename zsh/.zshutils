function cl() {
    DIR="$*";
	# if no DIR given, go home
	if [ $# -lt 1 ]; then 
		DIR=$HOME;
    fi;
    builtin cd "${DIR}";
    # use your preferred ls command
	exa --all --group-directories-first
}

function mcd() {
    mkdir -p $1;
    cd $1
}

function brew_update() {
    brew update;
    print "BREW - Update done"
    brew upgrade;
    print "BREW - Upgrade done"
    brew upgrade --cask;
    print "BREW - Upgrade cask done"
    brew cleanup;
    print "BREW - Cleanup done"
}

function pid() {
    lsof -ti:$1
}

function kp() {
    if [ $1 ]; then
        kill $(lsof -ti:$1)
        print "hasta la vista, baby"
    else
        print "no arg!"
    fi
}
