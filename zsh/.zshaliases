#!/usr/bin/env zsh

# For a full list of active aliases, run `alias`.
alias reload="source ~/.zshrc"

# alias pwd="pwd && pwd | pbcopy"

alias ..='cd ..'
alias o='open'
alias c='clear'
alias cat="bat"
alias ls='eza --all --group-directories-first'
alias ll='eza --long --all --group-directories-first'
alias tree='eza --tree'

alias which-command=whence
alias grep='grep --color=auto'
alias serve='python3 -m http.server'
alias brewu='brew update && brew upgrade && brew cleanup'
alias mcd=mcd
alias cl=cl
alias brewu=brew_update
alias kp=kp
alias pid='pid'

# Git
alias gaa='git add .'
alias ga='git add'

alias gc='git commit -m'
# alias gca='git commit --amend'

alias gco='git checkout'
alias gcb='git checkout -b'

alias gp='git push'
# alias gpf='git push -f'

alias gl='git pull'

alias gm='git merge'

alias gundo="git reset --soft HEAD~"
alias gr='git restore'
alias gra='git restore .'
alias grs='git restore --staged'

alias grb='git rebase'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'

alias gb='git branch'
alias gbd='git branch -D $(git branch | grep -v -e "main")' # Delete all local branchs

alias glg='git lg'
alias gst='git st'

alias gsta='git stash -u'
alias gstd='git stash drop'
alias gstl='git stash list'
alias gstp='git stash pop'


# Folders alias
alias dot='cd ~/Projects/dotfiles'
